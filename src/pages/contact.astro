---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
    <main class="min-h-screen flex items-center justify-center p-6">
      <div class="bg-white shadow-md rounded-lg max-w-4xl w-full overflow-hidden">
        <div class="grid md:grid-cols-2">
          <!-- Contact Information Section -->
          <div class="bg-blue-600 text-white p-8 flex flex-col justify-center">
            <h2 class="text-3xl font-bold mb-4">Get in Touch</h2>
            <p class="mb-6">Weâ€™d love to hear from you! Reach out to us via the form or using the details below.</p>
            <ul class="space-y-4">
              <li class="flex items-center">
                <span class="material-icons text-2xl mr-3">phone</span>
                <span>+1 234 567 890</span>
              </li>
              <li class="flex items-center">
                <span class="material-icons text-2xl mr-3">email</span>
                <span>contact@yourdomain.com</span>
              </li>
              <li class="flex items-center">
                <span class="material-icons text-2xl mr-3">location_on</span>
                <span>123 Main Street, Anytown, USA</span>
              </li>
            </ul>
          </div>
          <!-- Contact Form Section -->
          <div class="p-8">
            <h2 class="text-2xl font-bold mb-6">Send Us a Message</h2>
            <form action="#" method="POST" class="space-y-4">
              <div>
                <label for="name" class="block text-sm font-medium mb-1">Your Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                  placeholder="John Doe"
                  required
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium mb-1">Your Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                  placeholder="johndoe@example.com"
                  required
                />
              </div>
              <div>
                <label for="message" class="block text-sm font-medium mb-1">Message</label>
                <textarea
                  id="message"
                  name="message"
                  class="w-full p-3 border rounded-lg focus:ring-blue-500 focus:border-blue-500"
                  rows="5"
                  placeholder="Write your message here..."
                  required
                ></textarea>
              </div>
              <button
                type="submit"
                class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 transition"
              >
                Send Message
              </button>
            </form>
          </div>
        </div>
      </div>
    </main>
</Layout>
